        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <!-- Overlay scuro quando menu laterale Ã¨ aperto -->
      <div class="menu-overlay" id="menuOverlay"></div>
