        border-color: #6c757d !important;
        color: #6c757d !important;
        background-color: transparent !important;
    }
    
    .navbar .logout-btn:hover {
        background-color: transparent !important;
        border-color: #6c757d !important;
        color: #dc3545 !important; /* Solo il testo diventa rosso */
        transform: scale(1.05);
        transition: all 0.2s ease;
    }
    
    .navbar .logout-btn:focus,
    .navbar .logout-btn.focus {
        background-color: transparent !important;
        border-color: #6c757d !important;
        color: #dc3545 !important;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
    }
    
    .navbar .logout-btn:active,
    .navbar .logout-btn.active {
        background-color: transparent !important;
        border-color: #6c757d !important;
        color: #dc3545 !important;
    }
    
    /* Stili per il pulsante login nella navbar */
    .navbar .btn-outline-light:not(.logout-btn) {
        border-color: #f8f9fa !important;
        color: #f8f9fa !important;
        background-color: transparent !important;
    }
    
    .navbar .btn-outline-light:not(.logout-btn):hover {
        background-color: transparent !important;
        border-color: #f8f9fa !important;
        color: #20B2AA !important; /* Solo il testo diventa teal */
        transform: scale(1.05);
        transition: all 0.2s ease;
    }
    
    .navbar .btn-outline-light:not(.logout-btn):focus,
    .navbar .btn-outline-light:not(.logout-btn).focus {
        background-color: transparent !important;
        border-color: #f8f9fa !important;
        color: #20B2AA !important;
        box-shadow: 0 0 0 0.2rem rgba(32, 178, 170, 0.25) !important;
    }
    
    .navbar .btn-outline-light:not(.logout-btn):active,
    .navbar .btn-outline-light:not(.logout-btn).active {
        background-color: transparent !important;
        border-color: #f8f9fa !important;
        color: #20B2AA !important;
    }
    
    /* Stili per il pulsante teal */
    .btn-teal {
        background-color: #20B2AA !important;
        border-color: #20B2AA !important;
        color: white !important;
    }
    
    .btn-teal:hover {
        background-color: #1a9a94 !important;
        border-color: #1a9a94 !important;
        color: white !important;
    }
    
    /* Stili per link admin ristretti */
    .admin-restricted {
        cursor: pointer;
    }
    
    /* Stili specifici per mobile */
    @media (max-width: 991.98px) {
        .navbar-nav .nav-link.btn {
            margin-bottom: 0.5rem;
            text-align: center;
            display: block;
            width: 100%;
        }
        
        .navbar-nav .nav-link.btn:last-child {
            margin-bottom: 0;
        }
        
        .navbar-collapse {
            margin-top: 1rem;
        }
        
        /* Rimuovi transform scale su mobile per evitare problemi di layout */
        .navbar .logout-btn:hover,
        .navbar .btn-outline-light:not(.logout-btn):hover {
            transform: none;
        }
    }
    
    /* Stili per desktop */
    @media (min-width: 992px) {
        .navbar-nav .nav-link.btn {
            display: inline-block;
            width: auto;
        }
    }
</style>

<!-- Modal per avviso admin -->
<div class="modal fade" id="adminWarningModal" tabindex="-1" aria-labelledby="adminWarningModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="adminWarningModalLabel">Accesso Limitato</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <i class="fas fa-exclamation-triangle text-warning fs-1 mb-3"></i>
                    <h4>Accesso come Amministratore</h4>
                    <p>Sei attualmente loggato come amministratore. Per accedere a questa sezione devi essere loggato come utente normale.</p>
                    <p class="text-muted">Effettua il logout e accedi con un account utente per continuare.</p>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                <a href="/auth/logout" class="btn btn-teal">Logout</a>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestione click sui link ristretti per admin
    const adminRestrictedLinks = document.querySelectorAll('.admin-restricted');
    const adminWarningModal = document.getElementById('adminWarningModal');
    
    adminRestrictedLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            if (adminWarningModal) {
                const modalInstance = new bootstrap.Modal(adminWarningModal);
                modalInstance.show();
            }
        });
    });
    
    // Chiudi automaticamente il menu mobile quando si clicca su un link
    const navbarToggler = document.querySelector('.navbar-toggler');
    const navbarCollapse = document.querySelector('.navbar-collapse');
    const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
    
    navLinks.forEach(link => {
        link.addEventListener('click', function() {
            // Se siamo su mobile e il menu Ã¨ aperto, chiudilo
            if (window.innerWidth < 992 && navbarCollapse.classList.contains('show')) {
                navbarToggler.click();
            }
        });
    });
});
</script>


