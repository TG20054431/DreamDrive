<!-- Modal per avviso admin -->
<div class="modal fade" id="adminWarningModal" tabindex="-1" aria-labelledby="adminWarningModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="adminWarningModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Accesso Limitato
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="mb-3">
                    <i class="fas fa-user-shield text-primary fs-1 mb-3"></i>
                </div>
                <h4 class="mb-3">Accesso come Amministratore</h4>
                <p class="mb-3">Sei attualmente loggato come amministratore. Per accedere a questa sezione devi essere loggato come utente normale.</p>
                <p class="text-muted">Effettua il logout e accedi con un account utente per continuare.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                <a href="/auth/logout" class="btn btn-teal">
                    <i class="fas fa-sign-out-alt me-1"></i>
                    Logout
                </a>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('üîß Navbar script caricato');
    
    // Elementi principali
    const navbarToggler = document.querySelector('.navbar-toggler');
    const navbarCollapse = document.querySelector('.navbar-collapse');
    const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
    const adminRestrictedLinks = document.querySelectorAll('.admin-restricted');
    const adminWarningModal = document.getElementById('adminWarningModal');
    
    // Gestione click sui link ristretti per admin
    if (adminRestrictedLinks.length > 0 && adminWarningModal) {
        adminRestrictedLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                console.log('üö´ Link admin-restricted cliccato');
                
                try {
                    const modalInstance = new bootstrap.Modal(adminWarningModal);
                    modalInstance.show();
                } catch (error) {
                    console.error('‚ùå Errore apertura modal:', error);
                    alert('Sei loggato come amministratore. Effettua il logout per accedere a questa sezione.');
                }
            });
        });
    }
    
    // Gestione chiusura menu mobile
    if (navLinks.length > 0) {
        navLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                // Non chiudere per link admin ristretti o pulsanti
                if (!this.classList.contains('admin-restricted') && !this.classList.contains('btn')) {
                    closeMobileMenu();
                }
            });
        });
    }
    
    // Migliora la gestione del backdrop
    document.addEventListener('click', function(e) {
        if (window.innerWidth < 992 && navbarCollapse && navbarToggler) {
            const isClickInsideNav = navbarCollapse.contains(e.target) || navbarToggler.contains(e.target);
            
            if (!isClickInsideNav && navbarCollapse.classList.contains('show')) {
                closeMobileMenu();
            }
        }
    });
    
    // Previeni scroll quando il menu √® aperto
    function toggleBodyScroll(disable) {
        if (disable) {
            document.body.style.overflow = 'hidden';
        } else {
            document.body.style.overflow = '';
        }
    }
    
    // Aggiorna la funzione closeMobileMenu
    function closeMobileMenu() {
        if (window.innerWidth < 992 && navbarCollapse && navbarCollapse.classList.contains('show')) {
            try {
                const bsCollapse = new bootstrap.Collapse(navbarCollapse, {
                    toggle: false
                });
                bsCollapse.hide();
                toggleBodyScroll(false); // Riabilita scroll
            } catch (error) {
                console.warn('‚ö†Ô∏è Fallback chiusura menu');
                navbarCollapse.classList.remove('show');
                toggleBodyScroll(false);
            }
        }
    }
    
    // Aggiungi listener per quando il menu si apre/chiude
    if (navbarCollapse) {
        navbarCollapse.addEventListener('shown.bs.collapse', function() {
            toggleBodyScroll(true); // Disabilita scroll quando menu aperto
        });
        
        navbarCollapse.addEventListener('hidden.bs.collapse', function() {
            toggleBodyScroll(false); // Riabilita scroll quando menu chiuso
        });
    }
    
    // Chiudi menu quando si clicca fuori
    document.addEventListener('click', function(e) {
        if (window.innerWidth < 992 && navbarCollapse && navbarToggler) {
            const isClickInsideNav = navbarCollapse.contains(e.target) || navbarToggler.contains(e.target);
            
            if (!isClickInsideNav && navbarCollapse.classList.contains('show')) {
                closeMobileMenu();
            }
        }
    });
    
    // Chiudi menu al resize
    window.addEventListener('resize', function() {
        if (window.innerWidth >= 992 && navbarCollapse && navbarCollapse.classList.contains('show')) {
            closeMobileMenu();
        }
    });
    
    // Migliora accessibilit√† keyboard
    if (navLinks.length > 0) {
        navLinks.forEach(link => {
            link.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    this.click();
                }
            });
        });
    }
    
    console.log('‚úÖ Navbar inizializzata correttamente');
});
</script>


