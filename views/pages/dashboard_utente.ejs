<!doctype html>
<html lang="it">
<head>
    <title>DreamDrive | Profilo Utente</title>
    <%- include('../partials/head') %>
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .content-wrapper {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
            width: 100%;
        }
        
        /* Stili per il pulsante teal */
        .btn-teal {
            background-color: #20B2AA !important;
            border-color: #20B2AA !important;
            color: white !important;
        }
        
        .btn-teal:hover {
            background-color: #1a9a94 !important;
            border-color: #1a9a94 !important;
            color: white !important;
        }
        
        .btn-teal:focus,
        .btn-teal.focus {
            background-color: #1a9a94 !important;
            border-color: #1a9a94 !important;
            color: white !important;
            box-shadow: 0 0 0 0.2rem rgba(32, 178, 170, 0.25) !important;
        }
        
        .btn-teal:active,
        .btn-teal.active {
            background-color: #158a84 !important;
            border-color: #158a84 !important;
            color: white !important;
        }
        
        /* Mantieni il pulsante logout outline senza cambio sfondo */
        .btn-outline-danger:hover {
            background-color: transparent !important;
            border-color: #dc3545 !important;
            color: #dc3545 !important;
            transform: scale(1.05);
            transition: all 0.2s ease;
        }
        
        .btn-outline-danger:focus,
        .btn-outline-danger.focus {
            background-color: transparent !important;
            border-color: #dc3545 !important;
            color: #dc3545 !important;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
        }
        
        .btn-outline-danger:active,
        .btn-outline-danger.active {
            background-color: transparent !important;
            border-color: #dc3545 !important;
            color: #dc3545 !important;
        }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="content-wrapper">
        <div class="container mt-5" style="font-family: 'Tektur', sans-serif;">
            <%- include('../partials/alerts') %>
            
            <!-- User profile content -->
            <div class="row">
                <!-- Profilo utente -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-person-circle mb-3" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                            </svg>
                            <h4 id="userName">
                                <% if (typeof user !== 'undefined' && user) { %>
                                    <%= user.nome %> <%= user.cognome %>
                                <% } else { %>
                                    Nome Utente
                                <% } %>
                            </h4>
                            <p id="userEmail">
                                <% if (typeof user !== 'undefined' && user) { %>
                                    <%= user.email %>
                                <% } else { %>
                                    demo@example.com
                                <% } %>
                            </p>
                            <button class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</button>
                        </div>
                    </div>
                </div>

                <!-- Prenotazioni -->
                <div class="col-md-8">
                    <h3 class="mb-4">Le tue prenotazioni</h3>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-calendar-check me-2"></i>Prenotazioni Attive
                            </h5>
                            <div id="activeBookings">
                                <% if (typeof prenotazioni !== 'undefined' && prenotazioni && prenotazioni.length > 0) { %>
                                    <% prenotazioni.forEach(function(prenotazione) { %>
                                        <div class="booking-item mb-3 p-3 border rounded shadow-sm">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <h6 class="mb-2">
                                                        <i class="fas fa-car me-2 text-primary"></i>
                                                        <%= prenotazione.marca %> <%= prenotazione.modello %>
                                                    </h6>
                                                    <div class="booking-details">
                                                        <p class="mb-1">
                                                            <strong><i class="fas fa-tag me-1"></i>Servizio:</strong> 
                                                            <span class="badge <%= prenotazione.tipologia === 'trackday' ? 'bg-warning' : 'bg-success' %>">
                                                                <%= prenotazione.tipologia === 'trackday' ? 'Track Day' : 'Noleggio' %>
                                                            </span>
                                                        </p>
                                                        <p class="mb-1">
                                                            <strong><i class="fas fa-calendar me-1"></i>Data:</strong> 
                                                            <%= new Date(prenotazione.data).toLocaleDateString('it-IT', { 
                                                                weekday: 'long', 
                                                                year: 'numeric', 
                                                                month: 'long', 
                                                                day: 'numeric' 
                                                            }) %>
                                                        </p>
                                                        <% if (prenotazione.circuito) { %>
                                                            <p class="mb-1">
                                                                <strong><i class="fas fa-flag-checkered me-1"></i>Circuito:</strong> 
                                                                <%= prenotazione.circuito %>
                                                            </p>
                                                        <% } %>
                                                        <p class="mb-1">
                                                            <strong><i class="fas fa-cog me-1"></i>Motore:</strong> 
                                                            <%= prenotazione.motore %>
                                                        </p>
                                                        <% if (prenotazione.nazione) { %>
                                                            <p class="mb-1">
                                                                <strong><i class="fas fa-flag me-1"></i>Origine:</strong> 
                                                                <%= prenotazione.nazione %>
                                                            </p>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <div class="col-md-4 text-end">
                                                    <p class="text-success fw-bold mb-2">
                                                        <i class="fas fa-check-circle me-1"></i>Confermata
                                                    </p>
                                                    <button class="btn btn-outline-danger btn-sm delete-booking" 
                                                           data-bs-toggle="modal" 
                                                           data-bs-target="#eliminaPrenotazioneModal-<%= prenotazione.ID_prenotazione %>">
                                                        <i class="fas fa-trash-alt me-1"></i> Cancella
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Modal per eliminare prenotazione -->
                                        <div class="modal fade" id="eliminaPrenotazioneModal-<%= prenotazione.ID_prenotazione %>" tabindex="-1" aria-labelledby="eliminaPrenotazioneModalLabel-<%= prenotazione.ID_prenotazione %>" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title" id="eliminaPrenotazioneModalLabel-<%= prenotazione.ID_prenotazione %>">
                                                            <i class="fas fa-exclamation-triangle me-2"></i>Conferma cancellazione
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Sei sicuro di voler cancellare questa prenotazione?</p>
                                                        <div class="alert alert-warning">
                                                            <small>
                                                                <i class="fas fa-info-circle me-1"></i>
                                                                Questa azione non può essere annullata. La prenotazione sarà eliminata definitivamente.
                                                            </small>
                                                        </div>
                                                        <div class="booking-details mt-3 p-3 bg-light rounded">
                                                            <p class="mb-1"><strong>Auto:</strong> <%= prenotazione.marca %> <%= prenotazione.modello %></p>
                                                            <p class="mb-1"><strong>Servizio:</strong> <%= prenotazione.tipologia === 'trackday' ? 'Track Day' : 'Noleggio' %></p>
                                                            <p class="mb-1"><strong>Data:</strong> <%= new Date(prenotazione.data).toLocaleDateString('it-IT') %></p>
                                                            <% if (prenotazione.circuito) { %>
                                                                <p class="mb-0"><strong>Circuito:</strong> <%= prenotazione.circuito %></p>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                                                        <form action="/prenotazioni/<%= prenotazione.ID_prenotazione %>/elimina" method="POST" class="delete-form" style="display: inline;">
                                                            <button type="submit" class="btn btn-danger">
                                                                Conferma cancellazione
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="text-center py-4">
                                        <i class="fas fa-calendar-times text-muted" style="font-size: 3rem;"></i>
                                        <h6 class="mt-3 text-muted">Nessuna prenotazione attiva</h6>
                                        <p class="text-muted">Non hai ancora effettuato nessuna prenotazione.</p>
                                        <a href="/prenotazioni" class="btn btn-primary">
                                            <i class="fas fa-plus me-1"></i>Effettua una prenotazione
                                        </a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Le tue prenotazioni</h5>
                            <div id="userBookings">
                                <% if (typeof prenotazioni !== 'undefined' && prenotazioni.length > 0) { %>
                                    <% prenotazioni.forEach(function(prenotazione) { %>
                                        <div class="card mb-2">
                                            <div class="card-body">
                                                <h6><%= prenotazione.marca %> <%= prenotazione.modello %></h6>
                                                <p class="mb-1">
                                                    <strong>Tipo:</strong> <%= prenotazione.tipologia %><br>
                                                    <strong>Data:</strong> <%= prenotazione.data %>
                                                    <% if (prenotazione.circuito) { %>
                                                        <br><strong>Circuito:</strong> <%= prenotazione.circuito %>
                                                    <% } %>
                                                </p>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="text-muted">Nessuna prenotazione trovata.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <%- include('../partials/modals/logout-modal') %>
    <% if (typeof user !== 'undefined' && user && user.ruolo !== 'admin') { %>
        <%- include('../partials/modals/elimina-account-modal') %>
    <% } %>
    <%- include('../partials/scripts') %>
    
    <!-- Script per gestire la cancellazione delle prenotazioni -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestisce la visualizzazione dell'animazione durante l'invio del form di cancellazione
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function() {
                    const button = this.querySelector('button[type="submit"]');
                    const spinner = button.querySelector('.spinner-border');
                    
                    // Mostra lo spinner e disabilita il pulsante
                    spinner.classList.remove('d-none');
                    button.disabled = true;
                    button.textContent = 'Cancellazione in corso...';
                });
            });
        });
    </script>
    <!-- Script semplificato -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Chiudi il modal quando il form viene inviato
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function() {
                    const modal = this.closest('.modal');
                    if (modal) {
                        const bsModal = bootstrap.Modal.getInstance(modal);
                        if (bsModal) {
                            bsModal.hide();
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
