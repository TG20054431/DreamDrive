<!DOCTYPE html>
<html lang="it">
<head>
    <title>DreamDrive | Login</title>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>

    <main class="content-wrapper">
        <section class="login-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="card login-card">
                            <div class="login-header">
                                <img src="/images/logo_bianco.jpg" alt="DreamDrive" height="60" class="mb-3">
                                <h2>Accedi a DreamDrive</h2>
                            </div>
                            <div class="login-body">
                                <%- include('../partials/alerts') %>

                                <form id="loginForm" action="/auth/login" method="POST">
                                    <div class="mb-3">
                                        <label for="email" class="form-label fw-bold">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required autocomplete="email" placeholder="Inserisci la tua email">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label fw-bold">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" required autocomplete="current-password" placeholder="Inserisci la tua password">
                                    </div>
                                    <input type="hidden" name="serviceRedirect" value="<%= typeof serviceRedirect !== 'undefined' ? serviceRedirect : '' %>">
                                    <div class="d-grid mt-4">
                                        <button type="submit" class="btn btn-teal login-btn">
                                            Accedi
                                        </button>
                                    </div>
                                    <div class="login-footer">
                                        <p>Non hai ancora un account? <a href="/auth/register">Registrati</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
    <%- include('../partials/toast') %>
</body>
</html>
</html>
