<!doctype html>
<html lang="it">
<head>
    <title>DreamDrive | Admin Dashboard</title>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="content-wrapper">
        <div class="container-fluid admin-dashboard">
            <% if (typeof user !== 'undefined' && user && user.ruolo === 'admin') { %>
                <!-- Admin Dashboard with Sidebar Layout -->
                <div class="admin-container">
                    <div class="admin-sidebar">
                        <div class="sidebar-header">
                            <h3>Admin Panel</h3>
                            <span class="admin-name"><%= user.nome %> <%= user.cognome %></span>
                        </div>
                        <ul class="sidebar-menu">
                            <li class="sidebar-item <%= currentSection === 'prenotazioni' ? 'active' : '' %>">
                                <a href="/admin/dashboard/prenotazioni" class="sidebar-link" >
                                    <i class="bi bi-calendar-check"></i>
                                    <span>Prenotazioni</span>
                                </a>
                            </li>
                            <li class="sidebar-item <%= currentSection === 'auto' ? 'active' : '' %>">
                                <a href="/admin/dashboard/auto" class="sidebar-link">
                                    <i class="bi bi-car-front"></i>
                                    <span>Auto</span>
                                </a>
                            </li>
                            <li class="sidebar-item <%= currentSection === 'utenti' ? 'active' : '' %>">
                                <a href="/admin/dashboard/utenti" class="sidebar-link">
                                    <i class="bi bi-people"></i>
                                    <span>Utenti</span>
                                </a>
                            </li>
                            <li class="sidebar-item <%= currentSection === 'recensioni' ? 'active' : '' %>">
                                <a href="/admin/dashboard/recensioni" class="sidebar-link">
                                    <i class="bi bi-star"></i>
                                    <span>Recensioni</span>
                                </a>
                            </li>
                            <li class="sidebar-item <%= currentSection === 'contatti' ? 'active' : '' %>">
                                <a href="/admin/dashboard/contatti" class="sidebar-link">
                                    <i class="bi bi-envelope"></i>
                                    <span>Contatti</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="admin-content">
                        <!-- Mostra sezione prenotazioni solo se currentSection === 'prenotazioni' -->
                        <% if (currentSection === 'prenotazioni') { %>
                            <!-- Sezione Prenotazioni -->
                            <div class="content-section active" id="prenotazioni-section">
                                <h2 class="section-title">Gestione Prenotazioni</h2>
                                
                                <!-- Statistics Cards -->
                                <div class="stats-container">
                                    <div class="stat-card">
                                        <div class="stat-value" id="total-bookings">
                                            <%= typeof prenotazioni !== 'undefined' ? prenotazioni.length : 0 %>
                                        </div>
                                        <div class="stat-label">Prenotazioni Totali</div>
                                    </div>
                                    <div class="stat-card">
                                        <div class="stat-value" id="noleggio-bookings">
                                            <%= typeof prenotazioni !== 'undefined' ? prenotazioni.filter(p => p.tipologia === 'noleggio').length : 0 %>
                                        </div>
                                        <div class="stat-label">Noleggi</div>
                                    </div>
                                    <div class="stat-card">
                                        <div class="stat-value" id="trackday-bookings">
                                            <%= typeof prenotazioni !== 'undefined' ? prenotazioni.filter(p => p.tipologia === 'trackday').length : 0 %>
                                        </div>
                                        <div class="stat-label">Track Day</div>
                                    </div>
                                </div>
                                
                                <div class="table-responsive booking-table">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Cliente</th>
                                                <th>Email</th>
                                                <th>Servizio</th>
                                                <th>Auto</th>
                                                <th>Data</th>
                                                <th>Circuito</th>
                                                <th>Azioni</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof prenotazioni !== 'undefined' && prenotazioni.length > 0) { %>
                                                <% prenotazioni.forEach(function(prenotazione) { %>
                                                    <tr data-service="<%= prenotazione.tipologia %>">
                                                        <td><%= prenotazione.ID_prenotazione %></td>
                                                        <td><%= prenotazione.nome_utente || 'N/A' %> <%= prenotazione.cognome_utente || '' %></td>
                                                        <td><%= prenotazione.email || 'N/A' %></td>
                                                        <td>
                                                            <span class="badge <%= prenotazione.tipologia === 'trackday' ? 'bg-warning' : 'bg-success' %>">
                                                                <%= prenotazione.tipologia === 'trackday' ? 'Track Day' : 'Noleggio' %>
                                                            </span>
                                                        </td>
                                                        <td><%= prenotazione.marca %> <%= prenotazione.modello %></td>
                                                        <td><%= new Date(prenotazione.data).toLocaleDateString('it-IT') %></td>
                                                        <td><%= prenotazione.circuito || '-' %></td>
                                                        <td>
                                                            <div class="action-buttons">
                                                                <form action="/admin/prenotazioni/<%= prenotazione.ID_prenotazione %>/elimina" method="POST" style="display: inline;">
                                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                            onclick="return confirm('Sei sicuro di voler eliminare questa prenotazione?')">
                                                                        <i class="bi bi-trash"></i>
                                                                    </form>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="8" class="text-center">Nessuna prenotazione trovata</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } %>

                        <!-- Mostra sezione auto solo se currentSection === 'auto' -->
                        <% if (currentSection === 'auto') { %>
                            <!-- Sezione Auto -->
                            <div class="content-section active" id="auto-section">
                                <h2 class="section-title">Gestione Auto</h2>
                                
                                <!-- Add New Car Button -->
                                <div class="d-flex justify-content-end mb-3">
                                    <button class="btn btn-teal" data-bs-toggle="modal" data-bs-target="#addAutoModal">
                                        <i class="bi bi-plus-lg"></i> Aggiungi Auto
                                    </button>
                                </div>
                                
                                <!-- Cars Table -->
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Immagine</th>
                                                <th>Marca</th>
                                                <th>Modello</th>
                                                <th>Nazione</th>
                                                <th>Motore</th>
                                                <th>Azioni</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof autos !== 'undefined' && autos.length > 0) { %>
                                                <% autos.forEach(function(auto) { %>
                                                    <tr>
                                                        <td><%= auto.ID_auto %></td>
                                                        <td>
                                                            <img src="/uploads/auto/<%= auto.immagine %>" alt="<%= auto.marca %> <%= auto.modello %>" 
                                                                 width="80" height="60" class="img-thumbnail">
                                                        </td>
                                                        <td><%= auto.marca %></td>
                                                        <td><%= auto.modello %></td>
                                                        <td><%= auto.nazione %></td>
                                                        <td><%= auto.motore %></td>
                                                        <td>
                                                            <div class="action-buttons">
                                                                <!-- Pulsante Modifica -->
                                                                <button type="button" 
                                                                        class="btn btn-sm btn-outline-info edit-auto" 
                                                                        data-auto='<%- JSON.stringify(auto) %>'
                                                                        title="Modifica auto">
                                                                    <i class="bi bi-pencil"></i>
                                                                </button>
                                                                
                                                                <!-- Pulsante Elimina -->
                                                                <button type="button" 
                                                                        class="btn btn-sm btn-outline-danger delete-auto" 
                                                                        data-auto-id="<%= auto.ID_auto %>"
                                                                        data-auto-nome="<%= auto.marca %> <%= auto.modello %>"
                                                                        title="Elimina auto">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="text-center">Nessuna auto trovata</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Add Auto Modal -->
                                <div class="modal fade" id="addAutoModal" tabindex="-1" aria-labelledby="addAutoModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="addAutoModalLabel">Aggiungi Nuova Auto</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="/admin/auto/add" method="POST" enctype="multipart/form-data" id="addAutoForm">
                                                    <div class="row mb-3">
                                                        <div class="col-md-6">
                                                            <label for="marca" class="form-label">Marca</label>
                                                            <input type="text" class="form-control" id="marca" name="marca" required>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="modello" class="form-label">Modello</label>
                                                            <input type="text" class="form-control" id="modello" name="modello" required>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-md-6">
                                                            <label for="nazione" class="form-label">Nazione</label>
                                                            <input type="text" class="form-control" id="nazione" name="nazione" required>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="motore" class="form-label">Motore</label>
                                                            <input type="text" class="form-control" id="motore" name="motore" required>
                                                        </div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="immagine" class="form-label">Immagine</label>
                                                        <input type="file" class="form-control" id="immagine" name="immagine" accept="image/*" required>
                                                    </div>
                                                    <div class="mb-3 text-center" id="imagePreviewContainer" style="display: none;">
                                                        <img id="imagePreview" src="#" alt="Anteprima immagine" class="img-fluid" style="max-height: 200px;">
                                                    </div>
                                                    <div class="text-end">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                                                        <button type="submit" class="btn btn-teal">Salva</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Modal Modifica Auto -->
                                <div class="modal fade" id="editAutoModal" tabindex="-1" aria-labelledby="editAutoModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="editAutoModalLabel">Modifica Auto</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <form action="/admin/auto/edit" method="POST" enctype="multipart/form-data">
                                                <div class="modal-body">
                                                    <input type="hidden" id="edit_id_auto" name="id_auto">
                                                    
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="mb-3">
                                                                <label for="edit_marca" class="form-label">Marca</label>
                                                                <input type="text" class="form-control" id="edit_marca" name="marca" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="mb-3">
                                                                <label for="edit_modello" class="form-label">Modello</label>
                                                                <input type="text" class="form-control" id="edit_modello" name="modello" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="mb-3">
                                                                <label for="edit_nazione" class="form-label">Nazione</label>
                                                                <input type="text" class="form-control" id="edit_nazione" name="nazione" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="mb-3">
                                                                <label for="edit_motore" class="form-label">Motore</label>
                                                                <input type="text" class="form-control" id="edit_motore" name="motore" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="mb-3">
                                                        <label for="edit_immagine" class="form-label">Nuova Immagine (opzionale)</label>
                                                        <input type="file" class="form-control" id="edit_immagine" name="immagine" accept="image/*">
                                                        <div class="form-text">Lascia vuoto per mantenere l'immagine attuale</div>
                                                    </div>
                                                    
                                                    <!-- Immagine attuale -->
                                                    <div class="mb-3">
                                                        <label class="form-label">Immagine Attuale</label>
                                                        <div>
                                                            <img id="current_image" src="" alt="Immagine attuale" class="img-thumbnail" style="max-height: 200px; display: none;">
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Anteprima nuova immagine -->
                                                    <div id="editImagePreviewContainer" style="display: none;" class="mb-3">
                                                        <label class="form-label">Anteprima Nuova Immagine</label>
                                                        <div>
                                                            <img id="editImagePreview" src="" alt="Anteprima" class="img-thumbnail" style="max-height: 200px;">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                                                    <button type="submit" class="btn btn-teal">Salva Modifiche</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        <!-- Mostra sezione utenti solo se currentSection === 'utenti' -->
                        <% if (currentSection === 'utenti') { %>
                            <!-- Sezione Utenti -->
                            <div class="content-section active" id="utenti-section">
                                <h2 class="section-title">Gestione Utenti</h2>
                                <!-- Users Table -->
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nome</th>
                                                <th>Cognome</th>
                                                <th>Email</th>
                                                <th>Data Nascita</th>
                                                <th>Elimina</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof utenti !== 'undefined' && utenti.length > 0) { %>
                                                <% utenti.forEach(function(utente) { %>
                                                    <tr>
                                                        <td><%= utente.ID_utente %></td>
                                                        <td><%= utente.nome %></td>
                                                        <td><%= utente.cognome %></td>
                                                        <td><%= utente.email %></td>
                                                        <td><%= new Date(utente.data_nascita).toLocaleDateString('it-IT') %></td>
                                                        <td>
                                                            <div class="action-buttons">
                                                                <% if (utente.ID_utente !== user.ID_utente) { %>
                                                                    <button type="button" 
                                                                            class="btn btn-sm btn-outline-danger delete-user" 
                                                                            data-user-id="<%= utente.ID_utente %>"
                                                                            data-user-name="<%= utente.nome %> <%= utente.cognome %>"
                                                                            title="Elimina utente">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                <% } else { %>
                                                                    <span class="text-muted small">Account corrente</span>
                                                                <% } %>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center">Nessun utente trovato</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } %>

                        <!-- Modal per eliminazione utente -->
                        <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteUserModalLabel">Conferma Eliminazione Utente</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="alert alert-warning">
                                            <i class="bi bi-exclamation-triangle"></i>
                                            <strong>Attenzione!</strong> Questa azione non pu√≤ essere annullata.
                                        </div>
                                        <p>Sei sicuro di voler eliminare l'utente:</p>
                                        <ul>
                                            <li><strong>Nome:</strong> <span id="delete_user_name"></span></li>
                                            <li><strong>Email:</strong> <span id="delete_user_email"></span></li>
                                        </ul>
                                        <p class="text-danger">
                                            <small>Tutti i dati associati (prenotazioni, recensioni, ecc.) verranno eliminati permanentemente.</small>
                                        </p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                                        <form id="deleteUserForm" action="/admin/utenti/elimina" method="POST" style="display: inline;">
                                            <input type="hidden" name="userId" id="delete_user_id">
                                            <input type="hidden" name="redirect" value="/admin/dashboard/utenti">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash"></i> Elimina Utente
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Mostra sezione recensioni solo se currentSection === 'recensioni' -->
                        <% if (currentSection === 'recensioni') { %>
                            <!-- Sezione Recensioni -->
                            <div class="content-section active" id="recensioni-section">
                                <h2 class="section-title">Gestione Recensioni</h2>
                                <!-- Tabella recensioni -->
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Utente</th>
                                                <th>Valutazione</th>
                                                <th>Contenuto</th>
                                                <th>Data</th>
                                                <th>Azioni</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof recensioni !== 'undefined' && recensioni.length > 0) { %>
                                                <% recensioni.forEach(function(recensione) { %>
                                                    <tr>
                                                        <td><%= recensione.ID_recensione %></td>
                                                        <td><%= recensione.nome_utente || 'Anonimo' %></td>
                                                        <td><%= recensione.valutazione %>/5</td>
                                                        <td><%= recensione.contenuto %></td>
                                                        <td><%= new Date(recensione.data_creazione).toLocaleDateString('it-IT') %></td>
                                                        <td>
                                                            <div class="action-buttons">
                                                                <form action="/admin/recensioni/elimina" method="POST" style="display: inline;">
                                                                    <input type="hidden" name="recensioneId" value="<%= recensione.ID_recensione %>">
                                                                    <button type="submit" 
                                                                            class="btn btn-sm btn-outline-danger" 
                                                                            onclick="return confirm('Sei sicuro di voler eliminare questa recensione di <%= recensione.nome_utente %>?')">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center">Nessuna recensione trovata</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } %>

                        <!-- Mostra sezione contatti solo se currentSection === 'contatti' -->
                        <% if (currentSection === 'contatti') { %>
                            <!-- Sezione Contatti -->
                            <div class="content-section active" id="contatti-section">
                                <h2 class="section-title">Gestione Contatti</h2>
                                
                                <!-- Statistics Cards -->
                                <div class="stats-container">
                                    <div class="stat-card">
                                        <div class="stat-value" id="total-contacts">
                                            <%= typeof contatti !== 'undefined' ? contatti.length : 0 %>
                                        </div>
                                        <div class="stat-label">Contatti Totali</div>
                                    </div>
                                    <div class="stat-card">
                                        <div class="stat-value" id="today-contacts">
                                            <%= typeof contatti !== 'undefined' ? contatti.filter(c => new Date(c.data).toDateString() === new Date().toDateString()).length : 0 %>
                                        </div>
                                        <div class="stat-label">Oggi</div>
                                    </div>
                                </div>
                                
                                <!-- Contacts Table -->
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Email</th>
                                                <th>Messaggio</th>
                                                <th>Data</th>
                                                <th>Azioni</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof contatti !== 'undefined' && contatti.length > 0) { %>
                                                <% contatti.forEach(function(contatto) { %>
                                                    <tr>
                                                        <td><%= contatto.ID_contatto %></td>
                                                        <td><%= contatto.email %></td>
                                                        <td class="message-cell">
                                                            <div class="message-preview">
                                                                <%= contatto.messaggio.length > 100 ? contatto.messaggio.substring(0, 100) + '...' : contatto.messaggio %>
                                                            </div>
                                                            <% if (contatto.messaggio.length > 100) { %>
                                                                <button class="btn btn-sm btn-link show-full-message" data-message="<%= contatto.messaggio.replace(/"/g, '&quot;') %>">
                                                                    Mostra tutto
                                                                </button>
                                                            <% } %>
                                                        </td>
                                                        <td><%= new Date(contatto.data).toLocaleDateString('it-IT') %> <%= new Date(contatto.data).toLocaleTimeString('it-IT') %></td>
                                                        <td>
                                                            <div class="action-buttons">
                                                                <a href="mailto:<%= contatto.email %>" class="btn btn-sm btn-outline-info" title="Rispondi via email">
                                                                    <i class="bi bi-reply"></i>
                                                                </a>
                                                                <form action="/admin/contatti/<%= contatto.ID_contatto %>/elimina" method="POST" style="display: inline;">
                                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                            onclick="return confirm('Sei sicuro di voler eliminare questo contatto?')"
                                                                            title="Elimina contatto">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="text-center">Nessun contatto trovato</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } %>

                        <!-- Modal per mostrare messaggio completo -->
                        <div class="modal fade" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="messageModalLabel">Messaggio Completo</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div id="fullMessage"></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Mostra sezione impostazioni solo se currentSection === 'impostazioni' -->
                        <% if (currentSection === 'impostazioni') { %>
                            <!-- Sezione Impostazioni esistente -->
                            <div class="content-section active" id="impostazioni-section">
                                <h2 class="section-title">Impostazioni</h2>
                                <div class="card">
                                    <div class="card-body">
                                        <h4>Profilo Amministratore</h4>
                                        <form>
                                            <div class="mb-3">
                                                <label for="admin-name" class="form-label">Nome</label>
                                                <input type="text" class="form-control" id="admin-name" value="<%= user.nome %>">
                                            </div>
                                            <div class="mb-3">
                                                <label for="admin-email" class="form-label">Email</label>
                                                <input type="email" class="form-control" id="admin-email" value="<%= user.email %>">
                                            </div>
                                            <div class="mb-3">
                                                <label for="admin-password" class="form-label">Nuova Password</label>
                                                <input type="password" class="form-control" id="admin-password">
                                            </div>
                                            <button type="button" class="btn btn-teal">Salva Modifiche</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
                
            <% } else { %>
                <!-- Admin Login Form -->
                <div class="login-container">
                    <h2 class="admin-login-title">Accesso Amministratore</h2>
                    
                    <%- include('../partials/alerts') %>
                    
                    <form action="/auth/login" method="POST">
                        <input type="hidden" name="serviceRedirect" value="/admin/dashboard">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                            <label for="password">Password</label>
                        </div>
                        <button type="submit" class="btn btn-teal w-100">Accedi</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
    <script src="/js/admin-dashboard.js"></script>
</body>
</html>
