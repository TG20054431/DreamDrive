<!doctype html>
<html lang="it">
<head>
    <title>DreamDrive | Errore</title>
    <%- include('../partials/head') %>
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .content-wrapper {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
            width: 100%;
        }
        .error-container {
            text-align: center;
            padding: 40px 0;
        }
        .error-icon {
            font-size: 80px;
            color: teal;
        }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="content-wrapper">
        <div class="container mt-5">
            <div class="error-container">
                <div class="error-icon mb-4">
                    <i class="bi bi-exclamation-circle"></i>
                </div>
                <h1 class="display-4 mb-4">Oops! Qualcosa è andato storto</h1>
                
                <%- include('../partials/alerts') %>
                
                <% if (typeof error !== 'undefined' && error) { %>
                <p class="lead mb-4"><%= error %></p>
                <% } else { %>
                <p class="lead mb-4">Si è verificato un errore. Ti preghiamo di riprovare più tardi.</p>
                <% } %>
                
                <a href="/" class="btn btn-teal btn-lg">Torna alla Home</a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>
