<!doctype html>
<html lang="it">
<head>
    <title>DreamDrive | Recensioni</title>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    
    <div class="content-wrapper">
        <section class="py-5 bg-light">
            <div class="container py-4">
                <h1 class="section-title text-center mb-5">Le recensioni dei nostri clienti</h1>
                
                <%- include('../partials/alerts') %>
                
                <div class="row">
                    <% if (typeof recensioni !== 'undefined' && recensioni.length > 0) { %>
                        <% recensioni.forEach(function(recensione) { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 testimonial-card">
                                    <div class="card-body p-4">
                                        <div class="mb-3">
                                            <% for(let i=1; i<=5; i++) { %>
                                                <i class="fas fa-star <%= i <= recensione.valutazione ? 'text-warning' : 'text-secondary' %>"></i>
                                            <% } %>
                                        </div>
                                        <p class="card-text">"<%= recensione.contenuto %>"</p>
                                        <div class="d-flex justify-content-between align-items-center mt-3">
                                            <small class="text-muted">
                                                <% if (recensione.tipologia) { %>
                                                    <span class="badge bg-teal"><%= recensione.tipologia %></span>
                                                <% } %>
                                            </small>
                                            <small class="text-muted">
                                                <% if (recensione.data_creazione) { %>
                                                    <%= new Date(recensione.data_creazione).toLocaleDateString() %>
                                                <% } %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center">
                            <div class="p-5">
                                <i class="fas fa-comment-slash fa-3x mb-3 text-muted"></i>
                                <h4>Nessuna recensione disponibile</h4>
                                <p class="text-muted">Sii il primo a condividere la tua esperienza con DreamDrive!</p>
                                <a href="/#recensioni" class="btn btn-teal mt-3">Lascia una recensione</a>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <div class="text-center mt-5">
                    <a href="/#recensioni" class="btn btn-teal">Lascia la tua recensione</a>
                    <a href="/" class="btn btn-outline-secondary ms-2">Torna alla home</a>
                </div>
            </div>
        </section>
    </div>
    
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>
